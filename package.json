{
  "name": "apos-my-site",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node app",
    "dev": "nodemon",
    "build": "cross-env NODE_ENV=production node app @apostrophecms/asset:build",
    "serve": "cross-env NODE_ENV=production node app",
    "migrate": "node app @apostrophecms/migration:migrate"
  },
  "dependencies": {
    "apostrophe": "^3.0.1",
    "cross-env": "^7.0.3",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-apostrophe": "^3.4.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.7"
  },
  "nodemonConfig": {
    "delay": 1000,
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "locales/*.json",
      "public/uploads",
      "public/apos-frontend/*.js",
      "data"
    ],
    "ext": "json, js, html, scss, vue"
  }
}
